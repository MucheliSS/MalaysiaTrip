  <script>
    // Destination metadata for modal
    const destinations = {
      petronas: {
        title: 'Petronas Towers, Kuala Lumpur',
        image: 'https://upload.wikimedia.org/wikipedia/commons/4/44/Petronas_Towers_at_Night_-_from_the_base_upwards.jpg',
        description: 'Standing 452 m, the Petronas Twin Towers offer city views from the Skybridge and observation deck — your symbolic start and finish.'
      },
      'ipoh-heritage': {
        title: 'Ipoh Old Town Heritage',
        image: 'https://upload.wikimedia.org/wikipedia/commons/a/a1/Concubine_Lane_1.jpg',
        description: 'Concubine Lane and surrounding shophouses blend tin-mining heritage with lively cafés and murals.'
      },
      'white-coffee': {
        title: 'Ipoh White Coffee Experience',
        image: 'https://upload.wikimedia.org/wikipedia/commons/8/88/White_coffee_001%2C_Ipoh%2C_Malaysia.JPG',
        description: 'Roasted with margarine for a lighter, smoother profile and served with condensed milk in classic kopitiams.'
      },
      'gua-tempurung': {
        title: 'Gua Tempurung Cave Adventure',
        image: 'https://upload.wikimedia.org/wikipedia/commons/e/e9/Gua_Tempurung.jpg',
        description: 'A vast limestone system near Ipoh with lit walkways, chambers, and striking speleothems.'
      },
      'taiping-lake': {
        title: 'Taiping Lake Gardens Serenity',
        image: 'https://upload.wikimedia.org/wikipedia/commons/4/43/Taiping_Lake_Gardens_-_Raintrees.jpg',
        description: 'Century-old rain trees arch over lakeside roads in Malaysia’s first public garden (est. 1880).'
      },
      'street-art': {
        title: 'Georgetown Street Art Discovery',
        image: 'https://upload.wikimedia.org/wikipedia/commons/4/45/Penang_-_Little_Children_on_a_Bicycle.JPG',
        description: 'Ernest Zacharevic’s interactive murals turned George Town’s alleys into an open-air gallery.'
      },
      'penang-hill': {
        title: 'Penang Hill Railway Journey',
        image: 'https://upload.wikimedia.org/wikipedia/commons/2/29/Funicular_approaching_top_of_Penang_Hill.JPG',
        description: 'A funicular ride to cooler air, colonial bungalows, gardens, and sweeping views.'
      },
      'clan-jetties': {
        title: 'Penang Clan Jetties Heritage',
        image: 'https://upload.wikimedia.org/wikipedia/commons/8/8f/Chew_Jetty%2C_Georgetown%2C_Penang%2C_Malaysia_%285257132429%29.jpg',
        description: 'Stilt-house communities organized by Chinese clans — living heritage along Weld Quay.'
      }
    };

    function openModal(key) {
      const d = destinations[key];
      if (!d) return;
      const modal = document.getElementById('modal');
      document.getElementById('modal-title').textContent = d.title;
      document.getElementById('modal-description').textContent = d.description;
      const modalImg = document.getElementById('modal-image');
      modalImg.src = d.image;
      modalImg.alt = d.title;
      modal.style.display = 'block';
      modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }
    function closeModal() {
      const modal = document.getElementById('modal');
      modal.style.display = 'none';
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = 'auto';
    }

    // Enhance interactions and subtle entrance animations
    document.addEventListener('DOMContentLoaded', () => {
      // Click/keyboard open
      document.querySelectorAll('.destination-card').forEach(card => {
        const key = card.getAttribute('data-destination');
        card.addEventListener('click', () => openModal(key));
        card.addEventListener('keypress', e => {
          if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); openModal(key); }
        });
      });
      // Close on overlay click
      document.getElementById('modal').addEventListener('click', e => { if (e.target.id === 'modal') closeModal(); });
      // Close with Escape
      document.addEventListener('keydown', e => { if (e.key === 'Escape') closeModal(); });

      // Fade-in on scroll
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.15, rootMargin: '0px 0px -50px 0px' });

      document.querySelectorAll('.destination-card, .info-card').forEach((el, i) => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(20px)';
        el.style.transition = `opacity .6s ease ${i * 0.06}s, transform .6s ease ${i * 0.06}s`;
        observer.observe(el);
      });
    });
  </script>
</body>
